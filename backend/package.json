{
  "name": "blog-pdf-backend",
  "version": "1.0.0",
  "description": "Backend API for Blog to PDF converter",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "lint": "eslint server.js server.test.js --max-warnings=0",
    "lint:report": "eslint server.js server.test.js --max-warnings=0 --format json --output-file reports/eslint-report.json || true",
    "lint:fix": "eslint server.js server.test.js --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0"
  }
}